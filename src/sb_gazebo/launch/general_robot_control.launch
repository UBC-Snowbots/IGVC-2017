<!--
    Launch stuff general to all robots
-->

<launch>

    <arg name="robot"/>
 
    <!-- convert joint states to TF transforms for rviz, etc -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
        <param name="robot_description" 
        command="$(find xacro)/xacro --inorder '$(find sb_gazebo)/urdf/$(arg robot).xacro'" />
        <remap from="/joint_states" to="/robot/joint_states" />
    </node>

    <!-- This is for jfrost's Zed module -->
    <!-- <node name="zed_transform" pkg="sb_gazebo" type="zed_transform" output="screen" /> -->

</launch>
